{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Source ROS Environment",
            "type": "shell",
            "command": "source /opt/ros/humble/setup.bash && source /workspaces/isaac_ros-dev/install/setup.bash",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Isaac ROS Workspace",
            "type": "shell",
            "command": "source /opt/ros/humble/setup.bash && cd /workspaces/isaac_ros-dev && colcon build --symlink-install",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}